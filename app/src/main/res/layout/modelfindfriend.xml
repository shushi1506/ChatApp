<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >



    <Button
        android:id="@+id/removeAddFriend"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_selector"
        android:layout_marginTop="10dp"
        android:textSize="8dp"
        android:text="Hủy Kết Bạn"
        android:maxWidth="10dp" />
    <Button
        android:id="@+id/addFriend"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:background="@drawable/button_selector"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/removeAddFriend"
        android:textSelectHandleRight="@id/removeAddFriend"
        android:textSize="8dp"
        android:textColor="@color/com_facebook_blue"
        android:text="Chấp Nhận"
        android:maxWidth="10dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll"
       android:layout_toLeftOf="@+id/addFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_model_friend"
            android:layout_width="@dimen/list_item_avatar_size"
            android:layout_height="@dimen/list_item_avatar_size"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/txtdisplay_model_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem" />


    </LinearLayout>

</RelativeLayout>